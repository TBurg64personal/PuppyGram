<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#54FFEB3B"
    android:fontFamily="casual"
    tools:context=".ProfilePage">

    <ImageView
        android:id="@+id/profilePicture"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="32dp"
        android:contentDescription="@string/users_profile_picture"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/app_icon"
        tools:srcCompat="@tools:sample/avatars[2]" />

    <TextView
        android:id="@+id/numPostsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/posts"
        app:layout_constraintBottom_toBottomOf="@+id/numFollowersLabel"
        app:layout_constraintEnd_toStartOf="@+id/numFollowersLabel"
        app:layout_constraintHorizontal_bias="0.527"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/numFollowersLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/followers"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profilePicture" />

    <TextView
        android:id="@+id/numFollowingLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/following"
        app:layout_constraintBottom_toBottomOf="@+id/numFollowersLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toEndOf="@+id/numFollowersLabel" />

    <TextView
        android:id="@+id/numPosts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/zero"
        app:layout_constraintEnd_toEndOf="@+id/numPostsLabel"
        app:layout_constraintStart_toStartOf="@+id/numPostsLabel"
        app:layout_constraintTop_toBottomOf="@+id/numPostsLabel" />

    <TextView
        android:id="@+id/numFollowers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/zero"
        app:layout_constraintEnd_toEndOf="@+id/numFollowersLabel"
        app:layout_constraintStart_toStartOf="@+id/numFollowersLabel"
        app:layout_constraintTop_toBottomOf="@+id/numFollowersLabel" />

    <TextView
        android:id="@+id/numFollowing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/zero"
        app:layout_constraintEnd_toEndOf="@+id/numFollowingLabel"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="@+id/numFollowingLabel"
        app:layout_constraintTop_toBottomOf="@+id/numFollowingLabel" />

    <GridView
        android:id="@+id/gridview"
        android:layout_width="350dp"
        android:layout_height="450dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:columnWidth="90dp"
        android:numColumns="auto_fit"
        android:verticalSpacing="10dp"
        android:horizontalSpacing="10dp"
        android:stretchMode="columnWidth"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numFollowers" />

</androidx.constraintlayout.widget.ConstraintLayout>